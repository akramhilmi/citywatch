<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/threadComment"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@color/md_theme_surface">

  <com.google.android.material.imageview.ShapeableImageView
    android:id="@+id/ivThreadCommentProfile"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:scaleType="centerCrop"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:shapeAppearanceOverlay="@style/CircleImage"
    app:srcCompat="@drawable/ic_profile"
    app:strokeColor="@color/md_theme_outline"
    app:strokeWidth="2dp" />

  <TextView
    android:id="@+id/tvThreadCommentName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:text="Name"
    android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
    android:textColor="@color/md_theme_onSurface"
    app:layout_constraintBottom_toBottomOf="@id/ivThreadCommentProfile"
    app:layout_constraintStart_toEndOf="@id/ivThreadCommentProfile"
    app:layout_constraintTop_toTopOf="@id/ivThreadCommentProfile" />

  <TextView
    android:id="@+id/tvThreadCommentAdminTag"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:background="@drawable/admin_tag"
    android:text="ADMIN"
    android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
    android:textColor="@color/md_theme_onPrimary"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="@id/tvThreadCommentName"
    app:layout_constraintStart_toEndOf="@id/tvThreadCommentName"
    app:layout_constraintTop_toTopOf="@id/tvThreadCommentName" />

  <ImageButton
    android:id="@+id/btnThreadCommentMenu"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackgroundBorderless"
    android:contentDescription="Comment options"
    android:padding="8dp"
    android:src="@drawable/ic_more_vert"
    android:visibility="gone"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="@id/tvThreadCommentName"
    app:tint="@color/md_theme_onSurfaceVariant" />

  <TextView
    android:id="@+id/tvThreadCommentContent"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="8dp"
    android:text="This is a comment"
    android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
    android:textColor="@color/md_theme_onSurface"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/ivThreadCommentProfile" />

  <ImageButton
    android:id="@+id/btnThreadCommentUpvote"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@null"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/tvThreadCommentContent"
    app:srcCompat="@drawable/ic_thumb_up"
    app:tint="@color/md_theme_onSurfaceVariant" />

  <TextView
    android:id="@+id/tvThreadCommentVotes"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:text="67"
    android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
    app:layout_constraintBottom_toBottomOf="@id/btnThreadCommentUpvote"
    app:layout_constraintStart_toEndOf="@+id/btnThreadCommentUpvote"
    app:layout_constraintTop_toTopOf="@+id/btnThreadCommentUpvote" />

  <ImageButton
    android:id="@+id/btnThreadCommentDownvote"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="10dp"
    android:background="@null"
    app:layout_constraintStart_toEndOf="@+id/tvThreadCommentVotes"
    app:layout_constraintTop_toBottomOf="@+id/tvThreadCommentContent"
    app:srcCompat="@drawable/ic_thumb_down"
    app:tint="@color/md_theme_onSurfaceVariant" />
</androidx.constraintlayout.widget.ConstraintLayout>
